<Visualizar_datosScreen>:
    ScrollView:
        canvas.before:
            Color:
                rgb: 0.5, 0.5, 0.7
            Rectangle:
                pos: self.pos
                size: self.size
        do_scroll_x: False
        GridLayout:
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            padding: 10
            canvas.before:
                Color:
                    rgb: 0.5, 0.5, 0.7
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint_y: None
                height: 30
            Button:
                text: 'Go to Screen Ver_datos_padres'
                size_hint_y: None
                height: 45
                on_press: root.go_to_ver_datos_padres()
            Button:
                text: 'Go to Screen Ver_datos_facturacion'
                size_hint_y: None
                height: 45
                on_press: root.go_to_ver_datos_facturacion()
            Button:
                text: 'Go to Screen Inicio'
                size_hint_y: None
                height: 45
                on_press: root.go_to_inicio()